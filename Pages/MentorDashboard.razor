@page "/mentor-dashboard"
@using EduMentorClient.Services
@using Client.Shared
@using System.Net.Http.Headers
@using MudBlazor
@inject HttpClient Http
@inject UserState UserState
@inject ISnackbar Snackbar
@inject NavigationManager Nav
@inject IDialogService _dialogService

<PageTitle>Painel do Mentor - EduMentor</PageTitle>

<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">

    <div class="mb-8">
        <h1 class="text-3xl font-extrabold text-[#0056D2]">Painel do Mentor</h1>
        <p class="mt-2 text-gray-600">Faça a gestão das suas conexões e acompanhe os seus alunos.</p>
    </div>

    <div class="">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <button @onclick="@(() => activeTab = 0)"
                class="@(activeTab == 0 ? "border-[#0056D2] text-[#0056D2]" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm flex items-center transition-colors duration-200">
                Solicitações Pendentes
                @if (pendingList.Count > 0)
                {
                    <span
                        class="ml-2 bg-red-100 text-red-600 py-0.5 px-2.5 rounded-full text-xs font-bold">@pendingList.Count</span>
                }
            </button>

            <button @onclick="@(() => activeTab = 1)"
                class="@(activeTab == 1 ? "border-[#0056D2] text-[#0056D2]" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm flex items-center transition-colors duration-200">
                Meus Alunos Ativos
                @if (activeList.Count > 0)
                {
                    <span
                        class="ml-2 bg-green-100 text-green-600 py-0.5 px-2.5 rounded-full text-xs font-bold">@activeList.Count</span>
                }
            </button>
        </nav>
    </div>

    @if (loading)
    {
        <div class="flex justify-center py-12">
            <svg class="animate-spin h-10 w-10 text-[#0056D2]" xmlns="http://www.w3.org/2000/svg" fill="none"
                viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                </path>
            </svg>
        </div>
    }
    else
    {
        @if (activeTab == 0)
        {
            @if (!pendingList.Any())
            {
                <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-r">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                    clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-blue-700">Nenhuma solicitação pendente no momento.</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-t border-gray-200">
                        <thead>
                            <tr>
                                <th class="py-4 px-4 text-xs font-bold text-gray-500 uppercase tracking-wider border-b border-gray-200">Aluno</th>
                                <th class="py-4 px-4 text-xs font-bold text-gray-500 uppercase tracking-wider border-b border-gray-200">Interesse</th>
                                <th class="py-4 px-4 text-xs font-bold text-gray-500 uppercase tracking-wider border-b border-gray-200">Mensagem</th>
                                <th class="py-4 px-4 text-xs font-bold text-gray-500 uppercase tracking-wider border-b border-gray-200">Data</th>
                                <th class="py-4 px-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right border-b border-gray-200">Ações</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            @foreach (var request in pendingList)
                            {
                                <tr class="hover:bg-gray-50 transition duration-150 border-b border-gray-100 last:border-b-0">
                                    <td class="py-4 px-4 text-sm font-semibold text-gray-900">@request.StudentName</td>
                                    <td class="py-4 px-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-100">
                                            @request.StudentArea
                                        </span>
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-600 max-w-xs truncate" title="@request.InitialMessage">
                                        @request.InitialMessage
                                    </td>
                                    <td class="py-4 px-4 text-sm text-gray-500 font-mono">
                                        @request.RequestDate.ToShortDateString()
                                    </td>
                                    <td class="py-4 px-4 text-right text-sm font-medium flex justify-end gap-4">
                                        <button @onclick="@(() => UpdateStatus(request, 1))" 
                                                class="text-green-600 hover:text-green-800 flex items-center gap-1 transition">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                            </svg>
                                            Aceitar
                                        </button>
                                        <button @onclick="@(() => UpdateStatus(request, 2))" 
                                                class="text-red-600 hover:text-red-800 flex items-center gap-1 transition">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                            </svg>
                                            Recusar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        }

        @if (activeTab == 1)
        {
            @if (!activeList.Any())
            {
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">Ainda não tens mentorados ativos.</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                    @foreach (var item in activeList)
                    {
                        <div
                            class="bg-white overflow-hidden shadow rounded-xl border border-gray-200 hover:shadow-md transition duration-200">
                            <div class="p-4">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <span
                                            class="h-12 w-12 rounded-full bg-purple-100 flex items-center justify-center text-purple-600 font-bold text-xl">
                                            @item.StudentName.Substring(0, 1).ToUpper()
                                        </span>
                                    </div>
                                    <div class="ml-4">
                                        <h3 class="text-lg font-bold text-gray-900 truncate">@item.StudentName</h3>
                                        <p class="text-sm text-gray-500">@item.StudentArea</p>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-gray-50 p-4 border-t border-gray-100 flex justify-between">
                                <button @onclick="@(() => VerProgresso(item.StudentId))"
                                    class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-[#0056D2] bg-blue-50 hover:bg-blue-100 transition">
                                    <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                                    </svg>
                                    Progresso
                                </button>

                                <button @onclick="@(() => OpenCreateTrackDialog(item.StudentId, item.StudentName))"
                                    class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-[#0056D2] hover:bg-[#00419E] transition shadow-sm">
                                    <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                    </svg>
                                    Criar Trilha
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    }
</div>

@code {
    private bool loading = true;
    private int activeTab = 0;
    private List<MentorshipDto> allRequests = new();

    private List<MentorshipDto> pendingList => allRequests.Where(r => r.Status == 0).ToList();
    private List<MentorshipDto> activeList => allRequests.Where(r => r.Status == 1).ToList();

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsLoggedIn || UserState.Role != "Mentor")
        {
            Nav.NavigateTo("/login");
            return;
        }
        await LoadRequests();
    }

    private async Task LoadRequests()
    {
        loading = true;
        try
        {
            var request = new HttpRequestMessage(HttpMethod.Get, "api/mentorship/my-requests");
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                allRequests = await response.Content.ReadFromJsonAsync<List<MentorshipDto>>() ?? new();
            }
        }
        catch (Exception)
        {
            Snackbar.Add("Erro ao carregar dados.", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private async Task UpdateStatus(MentorshipDto item, int statusEnum)
    {
        try
        {
            var request = new HttpRequestMessage(HttpMethod.Patch, $"api/mentorship/{item.Id}/status");
            request.Content = JsonContent.Create(statusEnum);
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                var msg = statusEnum == 1 ? "Aluno aceito!" : "Solicitação recusada.";
                Snackbar.Add(msg, statusEnum == 1 ? Severity.Success : Severity.Warning);
                await LoadRequests();
            }
            else
            {
                Snackbar.Add("Erro ao atualizar status.", Severity.Error);
            }
        }
        catch
        {
            Snackbar.Add("Erro de conexão.", Severity.Error);
        }
    }

    private void VerProgresso(int studentId)
    {
        Nav.NavigateTo($"/progress/{studentId}");
    }

    private async Task OpenCreateTrackDialog(int studentId, string studentName)
    {
        var parameters = new DialogParameters { ["StudentId"] = studentId };
        var options = new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true, CloseOnEscapeKey = true };
        var dialog = await _dialogService.ShowAsync<CreateTrackDialog>($"Criar Trilha para {studentName}", parameters, options);
        var result = await dialog.Result;

        if (result is not null && !result.Canceled)
        {
            Snackbar.Add("Trilha criada com sucesso!", Severity.Success);
        }
    }

    public class MentorshipDto
    {
        public int Id { get; set; }
        public int StudentId { get; set; }
        public string StudentName { get; set; } = string.Empty;
        public string StudentArea { get; set; } = string.Empty;
        public string InitialMessage { get; set; } = string.Empty;
        public int Status { get; set; }
        public DateTime RequestDate { get; set; }
    }
}