@page "/"
@using EduMentorClient.Services
@using System.Net.Http.Headers
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject UserState UserState
@inject NavigationManager Nav

<PageTitle>EduMentor - Nova Trilha</PageTitle>

@if (UserState.Role == "Aluno")
{
    <div
        class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 transition-all duration-500 @(result == null ? "min-h-[80vh] flex flex-col justify-center" : "py-8")">

        @if (result == null)
        {
            <div class="text-center mb-8 animate-[fadeIn_0.5s]">
                <h1 class="text-4xl sm:text-5xl font-extrabold text-[#0056D2] tracking-tight mb-4">
                    Olá, @(string.IsNullOrEmpty(userName) ? "Estudante" : userName)!
                </h1>
                <p class="max-w-2xl mx-auto text-xl text-gray-500">
                    O que vamos aprender sobre <b>@(userArea ?? "o seu futuro")</b> hoje?
                </p>
            </div>

            <div class="w-full max-w-3xl mx-auto">

                @if (suggestions.Any())
                {
                    <div class="flex flex-wrap justify-center gap-2 mb-6 animate-[fadeIn_0.5s_0.2s_both]">
                        @foreach (var suggestion in suggestions)
                        {
                            <button @onclick="() => SelectSuggestion(suggestion)"
                                class="flex gap-2 bg-white border border-blue-200 text-[#0056D2] hover:bg-blue-50 hover:border-blue-300 px-4 py-2 rounded-full text-sm font-medium transition shadow-sm">
                                <i class="fa-solid fa-wand-magic-sparkles"></i>
                                <span>@suggestion</span>
                            </button>
                        }
                    </div>
                }

                <div class="relative bg-white shadow-xl rounded-3xl border border-gray-200 focus:ring-0">
                    <label for="objective" class="sr-only">O teu objetivo</label>
                    <textarea id="objective" rows="3" @bind="userGoal" @bind:event="oninput"
                        class="block w-full text-lg border-none rounded-3xl p-4 pr-16 resize-none focus:ring-0 text-gray-800 placeholder-gray-400 bg-transparent"
                        placeholder="Digite o seu objetivo ou escolha uma sugestão acima..."></textarea>
                    <div class="absolute bottom-2 right-2">
                        <button @onclick="GenerateTrack" disabled="@(loading || string.IsNullOrWhiteSpace(userGoal))"
                            class="flex items-center justify-center h-10 w-10 rounded-full bg-[#0056D2] text-white hover:bg-[#00419E] focus:outline-none disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 shadow-md hover:shadow-lg">
                            @if (loading)
                            {
                                <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4">
                                    </circle>
                                    <path class="opacity-75" fill="currentColor"
                                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                    </path>
                                </svg>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                    class="w-5 h-5 ml-0.5">
                                    <path
                                        d="M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z" />
                                </svg>
                            }
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
        @if (!result.AiPlan.Activities.Any())
        {
            <div class="mt-12 max-w-2xl mx-auto animate-[fadeIn_0.5s]">
                <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-r-xl shadow-sm">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-8 w-8 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                                fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                    clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-bold text-red-800">Não foi possível gerar a trilha</h3>
                            <div class="mt-2 text-sm text-red-700 leading-relaxed">
                                <p>@result.AiPlan.Motivation</p>
                            </div>
                            <div class="mt-4">
                                <button @onclick="ResetSearch"
                                    class="text-sm font-bold text-red-800 hover:text-red-900 underline focus:outline-none transition">
                                    Tentar novamente com outro objetivo
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="mt-8 grid grid-cols-1 lg:grid-cols-12 gap-8 animate-[fadeIn_0.5s_ease-out]">

                <div class="lg:col-span-7 flex flex-col space-y-8">

                    <button @onclick="ResetSearch"
                        class="self-start text-sm text-gray-500 hover:text-[#0056D2] flex items-center gap-1 transition mb-[-20px]">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Nova Pesquisa
                    </button>

                    <div class="flex justify-end">
                        <div
                            class="bg-[#EBF5FF] text-[#1F1F1F] px-6 py-4 rounded-3xl rounded-tr-sm shadow-sm border border-blue-50 max-w-[90%]">
                            <p class="text-lg">@userGoal</p>
                        </div>
                        <div class="ml-3 flex-shrink-0 flex flex-col justify-end">
                            <div
                                class="h-8 w-8 bg-gray-200 rounded-full flex items-center justify-center text-xs font-bold text-gray-600 border border-gray-300">
                                @(string.IsNullOrEmpty(userName) ? "?" : userName.Substring(0, 1).ToUpper())
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-start gap-3">
                        <div class="flex-shrink-0 mt-1">
                            <div
                                class="h-10 w-10 rounded-full bg-gradient-to-br from-[#0056D2] to-blue-400 flex items-center justify-center shadow-md text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                            </div>
                        </div>

                        <div class="bg-white p-6 rounded-3xl rounded-tl-none shadow-sm border border-gray-200 w-full">

                            <h2 class="text-2xl font-bold text-gray-900 mb-3">@result.AiPlan.PlanTitle</h2>

                            <div class="flex flex-wrap gap-2 mb-4">
                                <span
                                    class="px-3 py-1 rounded-full bg-gray-100 text-gray-700 text-xs font-bold border border-gray-200">
                                    🎓 @result.AiPlan.SuggestedCourse
                                </span>
                                @if (!string.IsNullOrEmpty(result.AiPlan.SuggestedLocation))
                                {
                                    <span
                                        class="px-3 py-1 rounded-full bg-green-50 text-green-700 text-xs font-bold border border-green-200">
                                        📍 @result.AiPlan.SuggestedLocation
                                    </span>
                                }
                            </div>

                            <p class="text-gray-700 leading-relaxed mb-6 text-base">
                                @result.AiPlan.Motivation
                            </p>

                            <hr class="border-gray-100 mb-6" />

                            <h4 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2">
                                    </path>
                                </svg>
                                Plano de Ação Sugerido:
                            </h4>

                            <ul class="space-y-5">
                                @foreach (var activity in result.AiPlan.Activities)
                                {
                                    <li class="flex items-start group">
                                        <div class="flex-shrink-0 mt-1.5 mr-3">
                                            <div class="h-2.5 w-2.5 rounded-full bg-[#0056D2]"></div>
                                        </div>
                                        <div class="flex-1">
                                            <span class="font-bold text-gray-900 text-base block">@activity.Title</span>
                                            <span class="text-gray-600 text-sm leading-snug block mt-1">@activity.Description</span>

                                            @if (!string.IsNullOrEmpty(activity.Link))
                                            {
                                                <a href="@activity.Link" target="_blank"
                                                    class="inline-flex items-center mt-2 text-xs font-bold text-[#0056D2] hover:underline bg-blue-50 px-2 py-1 rounded transition hover:bg-blue-100">
                                                    Acessar Recurso
                                                    <svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14">
                                                        </path>
                                                    </svg>
                                                </a>
                                            }
                                        </div>
                                    </li>
                                }
                            </ul>

                            <div class="mt-6 pt-6 border-t border-gray-100 text-center">
                                <p class="text-sm text-green-600 font-medium flex items-center justify-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                        fill="currentColor">
                                        <path fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                            clip-rule="evenodd" />
                                    </svg>
                                    Trilha salva automaticamente em "Minhas Trilhas"
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="lg:col-span-5">
                    <div
                        class="bg-white shadow-lg rounded-3xl overflow-hidden border border-gray-100 h-full flex flex-col sticky top-4 max-h-[calc(100vh-2rem)]">
                        <div class="px-6 py-5 border-b border-gray-100 bg-[#E6FFFA] flex items-center justify-between">
                            <div>
                                <h3 class="text-lg font-bold text-[#007F6D]">
                                    Onde Estudar?
                                </h3>
                                <p class="text-xs text-[#2C7A7B]">
                                    @if (!string.IsNullOrEmpty(result.AiPlan.SuggestedLocation))
                                    {
                                        <span>Filtro: @result.AiPlan.SuggestedLocation (INEP 2024)</span>
                                    }
                                    else
                                    {
                                        <span>Dados oficiais do INEP 2024</span>
                                    }
                                </p>
                            </div>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#38B2AC]" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                        </div>

                        <div class="flex-grow overflow-y-auto scrollbar-thin scrollbar-thumb-gray-200">
                            @if (result.InepOptions == null || !result.InepOptions.Any())
                            {
                                <div class="p-8 text-center text-gray-500 flex flex-col items-center justify-center h-64">
                                    <svg class="h-12 w-12 text-gray-300 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <p class="text-sm">Nenhuma faculdade encontrada
                                        @(string.IsNullOrEmpty(result.AiPlan.SuggestedLocation) ? "" : $" em {result.AiPlan.SuggestedLocation}")</p>
                                </div>
                            }
                            else
                            {
                                <div class="divide-y divide-gray-100">
                                    @foreach (var course in result.InepOptions)
                                    {
                                        <div class="p-4 hover:bg-[#E6FFFA] transition duration-150 cursor-default group">
                                            <div class="flex justify-between items-start">
                                                <div>
                                                    <p class="text-sm font-bold text-gray-800 group-hover:text-[#007F6D]">
                                                        @course.InstitutionName</p>
                                                    <p class="text-xs text-gray-500 mt-0.5">@course.CourseName</p>
                                                </div>
                                            </div>
                                            <div class="mt-2 text-right">
                                                <span
                                                    class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold bg-white border border-gray-200 text-gray-600 shadow-sm">
                                                    📍 @course.City - @course.State
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        }
    </div>
}

@code {
    private string userGoal = "";
    private bool loading = false;
    private ApiResponse? result;
    private string userName = "";
    private string userArea = "";
    private List<string> suggestions = new();

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsLoggedIn)
        {
            Nav.NavigateTo("/login");
            return;
        }

        if (UserState.Role == "Mentor")
        {
            Nav.NavigateTo("/mentor-dashboard");
            return;
        }

        if (UserState.Role == "Admin")
        {
            Nav.NavigateTo("/admin/users");
            return;
        }

        if (UserState.Role == "Aluno")
        {
            await LoadUserInfo();
        }
    }

    private async Task LoadUserInfo()
    {
        try
        {
            var reqSuggestions = new HttpRequestMessage(HttpMethod.Get, "api/recommendation/suggestions");
            reqSuggestions.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);
            var resSuggestions = await Http.SendAsync(reqSuggestions);

            if (resSuggestions.IsSuccessStatusCode)
            {
                suggestions = await resSuggestions.Content.ReadFromJsonAsync<List<string>>() ?? new();
            }

            var reqMe = new HttpRequestMessage(HttpMethod.Get, "api/auth/me");
            reqMe.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);
            var resMe = await Http.SendAsync(reqMe);

            if (resMe.IsSuccessStatusCode)
            {
                var userData = await resMe.Content.ReadFromJsonAsync<UserMeDto>();

                if (userData is not null)
                {
                    userName = userData.Name ?? "Estudante";
                    userArea = userData.AreaInteresse ?? "Geral";
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar info: {ex.Message}");
        }
    }

    private void SelectSuggestion(string suggestion)
    {
        userGoal = suggestion;
    }

    private void ResetSearch()
    {
        result = null;
        userGoal = "";
    }

    public class UserMeDto
    {
        public int UserId { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string AreaInteresse { get; set; } = string.Empty;
        public bool IsAuthenticated { get; set; }
    }

    public class ApiResponse
    {
        public AiPlan AiPlan { get; set; } = new AiPlan();
        public List<InepCourse> InepOptions { get; set; } = new List<InepCourse>();
    }

    public class AiPlan
    {
        public string PlanTitle { get; set; } = string.Empty;
        public string Motivation { get; set; } = string.Empty;
        public string SuggestedCourse { get; set; } = string.Empty;
        public string? SuggestedLocation { get; set; }
        public List<Activity> Activities { get; set; } = new List<Activity>();
    }

    public class Activity
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Link { get; set; } = string.Empty;
        public bool IsCompleted { get; set; }
    }

    public class InepCourse
    {
        public string InstitutionName { get; set; } = string.Empty;
        public string CourseName { get; set; } = string.Empty;
        public string City { get; set; } = string.Empty;
        public string State { get; set; } = string.Empty;
    }

    private async Task GenerateTrack()
    {
        if (string.IsNullOrWhiteSpace(userGoal))
        {
            Snackbar.Add("Por favor, descreve o teu objetivo!", Severity.Warning);
            return;
        }

        loading = true;

        try
        {
            var payload = new { StudentId = UserState.UserId, SpecificGoal = userGoal };

            var request = new HttpRequestMessage(HttpMethod.Post, "api/recommendation/generate");
            request.Content = JsonContent.Create(payload);
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                result = await response.Content.ReadFromJsonAsync<ApiResponse>();
                Snackbar.Add("Trilha gerada e salva com sucesso!", Severity.Success);
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                Snackbar.Add("Sessão expirada.", Severity.Error);
                Nav.NavigateTo("/login");
            }
            else
            {
                Snackbar.Add($"Erro na API: {response.StatusCode}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro de conexão: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }
}