@page "/"
@using EduMentorClient.Services
@using System.Net.Http.Headers
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject UserState UserState
@inject NavigationManager Nav

<PageTitle>EduMentor - Nova Trilha</PageTitle>

@if (UserState.Role == "Aluno")
{
    <div
        class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 transition-all duration-500 @(result == null ? "min-h-[80vh] flex flex-col justify-center" : "py-8")">

        @if (result == null)
        {
            <div class="text-center mb-8 animate-[fadeIn_0.5s]">
                <h1 class="text-4xl sm:text-5xl font-extrabold text-[#0056D2] tracking-tight mb-4">
                    Olá, @(string.IsNullOrEmpty(userName) ? "Estudante" : userName)!
                </h1>
                <p class="max-w-2xl mx-auto text-xl text-gray-500">
                    O que vamos aprender sobre <b>@(userArea ?? "o seu futuro")</b> hoje?
                </p>
            </div>

            <div class="w-full max-w-3xl mx-auto">

                @if (suggestions.Any())
                {
                    <div class="flex flex-wrap justify-center gap-2 mb-6 animate-[fadeIn_0.5s_0.2s_both]">
                        @foreach (var suggestion in suggestions)
                        {
                            <button @onclick="() => SelectSuggestion(suggestion)"
                                class="flex gap-2 bg-white border border-blue-200 text-[#0056D2] hover:bg-blue-50 hover:border-blue-300 px-4 py-2 rounded-full text-sm font-medium transition shadow-sm">
                                <i class="fa-solid fa-wand-magic-sparkles"></i>
                                <span>@suggestion</span>
                            </button>
                        }
                    </div>
                }

                <div class="relative bg-white shadow-xl rounded-3xl border border-gray-200 focus:ring-0">
                    <label for="objective" class="sr-only">O teu objetivo</label>
                    <textarea id="objective" rows="3" @bind="userGoal" @bind:event="oninput" class="block w-full text-lg border-none rounded-3xl p-4 pr-16 resize-none focus:ring-0 text-gray-800 placeholder-gray-400 bg-transparent"  placeholder="Digite o seu objetivo ou escolha uma sugestão acima..."></textarea>
                    <div class="absolute bottom-2 right-2">
                        <button @onclick="GenerateTrack" disabled="@(loading || string.IsNullOrWhiteSpace(userGoal))"
                            class="flex items-center justify-center h-10 w-10 rounded-full bg-[#0056D2] text-white hover:bg-[#00419E] focus:outline-none disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 shadow-md hover:shadow-lg">
                            @if (loading)
                            {
                                <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4">
                                    </circle>
                                    <path class="opacity-75" fill="currentColor"
                                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                    </path>
                                </svg>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                    class="w-5 h-5 ml-0.5">
                                    <path
                                        d="M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z" />
                                </svg>
                            }
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="mt-16 grid grid-cols-1 lg:grid-cols-12 gap-8 animate-[fadeIn_0.5s_ease-out]">
                <div class="lg:col-span-7 space-y-6">
                    <div class="bg-white overflow-hidden shadow-lg rounded-3xl border border-gray-100">
                        <div
                            class="px-6 py-5 border-b border-gray-100 bg-white flex justify-between items-center flex-wrap gap-2">
                            <h3 class="text-xl font-bold text-[#0056D2] flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                                </svg>
                                @result.AiPlan.PlanTitle
                            </h3>

                            <div class="flex gap-2">
                                <span
                                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-blue-50 text-[#0056D2] border border-blue-100">
                                    @result.AiPlan.SuggestedCourse
                                </span>

                                @if (!string.IsNullOrEmpty(result.AiPlan.SuggestedLocation))
                                {
                                    <span
                                        class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-50 text-green-700 border border-green-100">
                                        📍 @result.AiPlan.SuggestedLocation
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="px-6 py-6">
                            <div
                                class="bg-gradient-to-r from-yellow-50 to-white border-l-4 border-yellow-400 p-4 mb-8 rounded-r-lg">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd"
                                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-yellow-800 italic font-medium">
                                            "@result.AiPlan.Motivation"
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-6 flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                                Sua Trilha Personalizada
                            </h4>

                            <ul class="space-y-6">
                                @foreach (var activity in result.AiPlan.Activities)
                                {
                                    <li class="relative group">
                                        <div class="flex items-start">
                                            <div class="flex-shrink-0 mt-2 mr-4">
                                                <div
                                                    class="h-2.5 w-2.5 rounded-full bg-[#0056D2] shadow-[0_0_0_4px_rgba(0,86,210,0.1)]">
                                                </div>
                                            </div>

                                            <div
                                                class="flex-1 bg-gray-50 rounded-2xl p-4 hover:bg-gray-100 transition-colors duration-200">
                                                <h4 class="font-bold text-gray-900 block text-base">
                                                    @activity.Title
                                                </h4>
                                                <p class="text-gray-600 text-sm mt-1 leading-relaxed">
                                                    @activity.Description
                                                </p>

                                                @if (!string.IsNullOrEmpty(activity.Link))
                                                {
                                                    <div class="mt-3">
                                                        <a href="@activity.Link" target="_blank"
                                                            class="inline-flex items-center text-xs font-semibold text-[#0056D2] hover:text-[#00419E] hover:underline transition-colors">
                                                            <svg class="mr-1.5 w-3.5 h-3.5" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                                    d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1">
                                                                </path>
                                                            </svg>
                                                            Ver conteúdo recomendado
                                                        </a>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="lg:col-span-5">
                    <div class="bg-white shadow-lg rounded-3xl overflow-hidden border border-gray-100 h-full flex flex-col">
                        <div class="px-6 py-5 border-b border-gray-100 bg-[#E6FFFA] flex items-center justify-between">
                            <div>
                                <h3 class="text-lg font-bold text-[#007F6D]">
                                    Onde Estudar?
                                </h3>
                                <p class="text-xs text-[#2C7A7B]">
                                    @if (!string.IsNullOrEmpty(result.AiPlan.SuggestedLocation))
                                    {
                                        <span>Filtro: @result.AiPlan.SuggestedLocation (Dados INEP 2024)</span>
                                    }
                                    else
                                    {
                                        <span>Dados oficiais do INEP 2024</span>
                                    }
                                </p>
                            </div>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#38B2AC]" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </div>

                        <div class="flex-grow overflow-y-auto max-h-[700px] scrollbar-thin scrollbar-thumb-gray-200">
                            @if (result.InepOptions == null || !result.InepOptions.Any())
                            {
                                <div class="p-8 text-center text-gray-500 flex flex-col items-center justify-center h-full">
                                    <svg class="h-12 w-12 text-gray-300 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <p>Nenhuma faculdade encontrada @(string.IsNullOrEmpty(result.AiPlan.SuggestedLocation) ? "" :
                                                                    $" em {result.AiPlan.SuggestedLocation}")</p>
                                </div>
                            }
                            else
                            {
                                <table class="min-w-full divide-y divide-gray-100">
                                    <thead class="bg-gray-50 sticky top-0 z-10">
                                        <tr>
                                            <th scope="col"
                                                class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">
                                                Instituição</th>
                                            <th scope="col"
                                                class="px-6 py-3 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">
                                                Local</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-100">
                                        @foreach (var course in result.InepOptions)
                                        {
                                            <tr class="hover:bg-[#E6FFFA] transition duration-150 cursor-default group">
                                                <td class="px-6 py-4 whitespace-normal">
                                                    <div class="text-sm font-bold text-gray-800 group-hover:text-[#007F6D]">
                                                        @course.InstitutionName</div>
                                                    <div class="text-xs text-gray-500 mt-0.5">@course.CourseName</div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-right">
                                                    <span
                                                        class="px-2.5 py-0.5 inline-flex text-xs font-bold rounded-full bg-green-50 text-green-700 border border-green-100">
                                                        @course.City - @course.State
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private string userGoal = "";
    private bool loading = false;
    private ApiResponse? result;
    private string userName = "";
    private string userArea = "";
    private List<string> suggestions = new();

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsLoggedIn)
        {
            Nav.NavigateTo("/login");
            return;
        }

        if (UserState.Role == "Mentor")
        {
            Nav.NavigateTo("/mentor-dashboard");
            return;
        }

        if (UserState.Role == "Admin")
        {
            Nav.NavigateTo("/admin/users");
            return;
        }

        if (UserState.Role == "Aluno")
        {
            await LoadUserInfo();
        }
    }

    private async Task LoadUserInfo()
    {
        try
        {
            var reqSuggestions = new HttpRequestMessage(HttpMethod.Get, "api/recommendation/suggestions");
            reqSuggestions.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);
            var resSuggestions = await Http.SendAsync(reqSuggestions);

            if (resSuggestions.IsSuccessStatusCode)
            {
                suggestions = await resSuggestions.Content.ReadFromJsonAsync<List<string>>() ?? new();
            }

            var reqMe = new HttpRequestMessage(HttpMethod.Get, "api/auth/me");
            reqMe.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);
            var resMe = await Http.SendAsync(reqMe);

            if (resMe.IsSuccessStatusCode)
            {
                var userData = await resMe.Content.ReadFromJsonAsync<UserMeDto>();

                if (userData is not null)
                {
                    userName = userData.Name ?? "Estudante";
                    userArea = userData.AreaInteresse ?? "Geral";
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar info: {ex.Message}");
        }
    }

    private void SelectSuggestion(string suggestion)
    {
        userGoal = suggestion;
    }

    private void ResetSearch()
    {
        result = null;
        userGoal = "";
    }

    public class UserMeDto
    {
        public int UserId { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string AreaInteresse { get; set; } = string.Empty;
        public bool IsAuthenticated { get; set; }
    }

    public class ApiResponse
    {
        public AiPlan AiPlan { get; set; } = new AiPlan();
        public List<InepCourse> InepOptions { get; set; } = new List<InepCourse>();
    }

    public class AiPlan
    {
        public string PlanTitle { get; set; } = string.Empty;
        public string Motivation { get; set; } = string.Empty;
        public string SuggestedCourse { get; set; } = string.Empty;
        public string? SuggestedLocation { get; set; }
        public List<Activity> Activities { get; set; } = new List<Activity>();
    }

    public class Activity
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Link { get; set; } = string.Empty;
        public bool IsCompleted { get; set; }
    }

    public class InepCourse
    {
        public string InstitutionName { get; set; } = string.Empty;
        public string CourseName { get; set; } = string.Empty;
        public string City { get; set; } = string.Empty;
        public string State { get; set; } = string.Empty;
    }

    private async Task GenerateTrack()
    {
        if (string.IsNullOrWhiteSpace(userGoal))
        {
            Snackbar.Add("Por favor, descreve o teu objetivo!", Severity.Warning);
            return;
        }

        loading = true;

        try
        {
            var payload = new { StudentId = UserState.UserId, SpecificGoal = userGoal };

            var request = new HttpRequestMessage(HttpMethod.Post, "api/recommendation/generate");
            request.Content = JsonContent.Create(payload);
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                result = await response.Content.ReadFromJsonAsync<ApiResponse>();
                Snackbar.Add("Trilha gerada e salva com sucesso!", Severity.Success);
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                Snackbar.Add("Sessão expirada.", Severity.Error);
                Nav.NavigateTo("/login");
            }
            else
            {
                Snackbar.Add($"Erro na API: {response.StatusCode}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro de conexão: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }
}