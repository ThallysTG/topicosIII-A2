@code {
    public class InepStatusDto
    {
        public bool JaExiste { get; set; }
        public DateTime? DataUltimaAtualizacao { get; set; }
        public string? Mensagem { get; set; }
    }

    private IBrowserFile? SelectedFile;
    private bool IsBusy = false;
    private bool IsLoadingStatus = true;
    private bool UploadBlocked = false;
    private DateTime? LastUpdate;
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool IsDragHover = false;
    private long MaxFileSize = 1024L * 1024L * 500L; 

    private string DropClass => IsDragHover ? "border-blue-500 bg-blue-50" : "border-gray-300 hover:border-blue-400 hover:bg-blue-50";

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsLoggedIn || UserState.Role != "Admin")
        {
            Nav.NavigateTo("/login");
            return;
        }

        await LoadStatus();
    }

    private async Task LoadStatus()
    {
        try 
        {
            IsLoadingStatus = true;
            
            var request = new HttpRequestMessage(HttpMethod.Get, "api/inep/status");
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                var status = await response.Content.ReadFromJsonAsync<InepStatusDto>();
                if (status != null && status.JaExiste)
                {
                    UploadBlocked = true;
                    LastUpdate = status.DataUltimaAtualizacao;
                }
            }
            else
            {
                if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    Nav.NavigateTo("/login");
                }
                ErrorMessage = "N√£o foi poss√≠vel verificar o status da base de dados.";
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao conectar: {ex.Message}", Severity.Error);
        }
        finally
        {
            IsLoadingStatus = false;
        }
    }

    private void OnDragEnter() => IsDragHover = true;
    private void OnDragLeave() => IsDragHover = false;

    private void LoadFiles(InputFileChangeEventArgs e)
    {
        ErrorMessage = null;
        SuccessMessage = null;
        IsDragHover = false;

        if (e.File.Size > MaxFileSize)
        {
            ErrorMessage = $"O arquivo excede o limite de {MaxFileSize / 1024 / 1024}MB.";
            return;
        }

        if (!e.File.Name.EndsWith(".csv", StringComparison.OrdinalIgnoreCase))
        {
            ErrorMessage = "Por favor, selecione apenas arquivos .csv";
            return;
        }

        SelectedFile = e.File;
    }

    private async Task UploadFile()
    {
        if (SelectedFile == null) return;

        IsBusy = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            using var content = new MultipartFormDataContent();
            using var fileContent = new StreamContent(SelectedFile.OpenReadStream(MaxFileSize));
            fileContent.Headers.ContentType = new MediaTypeHeaderValue("text/csv");
            content.Add(fileContent, "file", SelectedFile.Name);

            var request = new HttpRequestMessage(HttpMethod.Post, "api/inep/import");
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);
            request.Content = content;

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                SuccessMessage = "Importa√ß√£o conclu√≠da com sucesso!";
                Snackbar.Add("Importa√ß√£o conclu√≠da!", Severity.Success);
                SelectedFile = null;
                UploadBlocked = true;
                LastUpdate = DateTime.Now;
            }
            else
            {
                var errorBody = await response.Content.ReadAsStringAsync();
                ErrorMessage = $"Erro na importa√ß√£o: {errorBody}";
                Snackbar.Add("Erro ao importar dados.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Erro de conex√£o: {ex.Message}";
            Snackbar.Add("Erro de conex√£o.", Severity.Error);
        }
        finally
        {
            IsBusy = false;
        }
    }
}