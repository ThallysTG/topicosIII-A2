@page "/my-tracks"
@using EduMentorClient.Services
@using System.Net.Http.Headers
@inject HttpClient Http
@inject UserState UserState
@inject NavigationManager Nav
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime

<PageTitle>Minhas Trilhas - EduMentor</PageTitle>

<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">

    <div class="text-center mb-10">
        <h1 class="text-3xl font-extrabold text-[#0056D2] tracking-tight sm:text-4xl">
            Minhas Trilhas de Estudo
        </h1>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500">
            Acompanha o teu progresso e revisita os teus planos de aprendizagem.
        </p>
    </div>

    @if (loading)
    {
        <div class="flex justify-center mt-12">
            <svg class="animate-spin h-10 w-10 text-[#0056D2]" xmlns="http://www.w3.org/2000/svg" fill="none"
                viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                </path>
            </svg>
        </div>
    }
    else if (tracks == null || !tracks.Any())
    {
        <div class="bg-blue-50 border-l-4 border-[#0056D2] p-4 rounded-r-md max-w-3xl mx-auto">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-blue-700">
                        Ainda n√£o tens trilhas geradas.
                        <a href="/" class="font-medium underline hover:text-blue-600 transition">Clique aqui para criar a
                            primeira.</a>
                    </p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="space-y-6 max-w-4xl mx-auto">
            @foreach (var track in tracks)
            {
                <div class="bg-white shadow-md rounded-xl overflow-hidden border border-gray-200 transition hover:shadow-lg">

                    <div @onclick="() => ToggleExpand(track)"
                        class="px-6 py-5 cursor-pointer bg-gray-50 hover:bg-gray-100 transition flex items-center justify-between group">

                        <div class="flex items-center space-x-4 flex-1 min-w-0 mr-4">
                            <div class="flex-shrink-0">
                                @if (track.Source == "Mentor")
                                {
                                    <span
                                        class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-purple-100 text-purple-600">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                            stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                    </span>
                                }
                                else
                                {
                                    <span
                                        class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-blue-100 text-[#0056D2]">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                            stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M13 10V3L4 14h7v7l9-11h-7z" />
                                        </svg>
                                    </span>
                                }
                            </div>

                            <div class="min-w-0">
                                <h3 class="text-lg font-bold text-gray-900 truncate">@track.Title</h3>
                                <div class="flex items-center text-sm text-gray-500 mt-1 space-x-2">
                                    <span
                                        class="@(track.Source == "Mentor" ? "text-purple-600 font-medium" : "text-[#0056D2] font-medium")">
                                        @(track.Source == "Mentor" ? "Mentor" : "IA")
                                    </span>
                                    <span>&bull;</span>
                                    <span>@track.CompletedActivities de @track.TotalActivities conclu√≠das</span>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">

                            <button @onclick="() => DeleteTrack(track)" @onclick:stopPropagation="true"
                                class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-full transition"
                                title="Excluir trilha">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>

                            <div class="relative h-12 w-12 flex items-center justify-center">
                                @{
                                    var progress = GetProgress(track);
                                    var dashArray = 2 * Math.PI * 18;
                                    var dashOffset = dashArray - (progress / 100.0 * dashArray);
                                }
                                <svg class="h-full w-full transform -rotate-90" viewBox="0 0 40 40">
                                    <circle class="text-gray-200" stroke-width="3" stroke="currentColor" fill="transparent"
                                        r="18" cx="20" cy="20" />
                                    <circle
                                        class="@(progress == 100 ? "text-green-500" : "text-[#0056D2]") transition-all duration-500 ease-out"
                                        stroke-width="3" stroke-dasharray="@dashArray" stroke-dashoffset="@dashOffset"
                                        stroke-linecap="round" stroke="currentColor" fill="transparent" r="18" cx="20"
                                        cy="20" />
                                </svg>
                                <span class="absolute text-[10px] font-bold text-gray-700">@((int)progress)%</span>
                            </div>
                        </div>
                    </div>

                    @if (track.IsExpanded)
                    {
                        <div class="border-t border-gray-200 bg-white px-6 py-6 animate-[fadeIn_0.2s_ease-out]">
                            
                            <p class="text-gray-600 mb-8 italic border-l-4 border-gray-300 pl-4 py-2 bg-gray-50 rounded-r-md">
                                "@track.Description"
                            </p>

                            @if (track.SavedInstitutions != null && track.SavedInstitutions.Any())
                            {
                                <div class="mb-8">
                                    <h4 class="text-sm font-bold text-[#0056D2] uppercase tracking-wider mb-4 flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                        </svg>
                                        Onde Estudar (Recomenda√ß√µes Salvas)
                                    </h4>
                                    
                                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                                        @foreach (var inst in track.SavedInstitutions)
                                        {
                                            <div class="bg-white border border-gray-200 rounded-lg p-4 hover:border-blue-300 hover:shadow-sm transition duration-200 flex flex-col justify-between h-full">
                                                <div>
                                                    <p class="text-xs font-bold text-gray-400 uppercase tracking-wide mb-1">Institui√ß√£o</p>
                                                    <p class="text-sm font-bold text-gray-800 line-clamp-2" title="@inst.InstitutionName">
                                                        @inst.InstitutionName
                                                    </p>
                                                </div>
                                                
                                                <div class="mt-3 pt-3 border-t border-gray-100 flex justify-between items-end">
                                                    <div>
                                                        <p class="text-[10px] font-medium text-gray-500">Curso</p>
                                                        <p class="text-xs text-gray-700 font-medium">@inst.CourseName</p>
                                                    </div>
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold bg-green-50 text-green-700 border border-green-100 whitespace-nowrap ml-2">
                                                        üìç @inst.City - @inst.State
                                                    </span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            
                            <hr class="border-gray-100 my-6" />

                            <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-4 flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012 2" />
                                </svg>
                                Plano de A√ß√£o
                            </h4>

                            <ul class="space-y-4">
                                @foreach (var activity in track.Activities)
                                {
                                    <li class="flex items-start group p-2 rounded-lg hover:bg-gray-50 transition">
                                        <div class="flex items-center h-6 pt-1">
                                            <input type="checkbox" 
                                                   checked="@activity.IsCompleted" 
                                                   @onchange="@((e) => ToggleStatus(track, activity))"
                                                   class="focus:ring-[#0056D2] h-5 w-5 text-[#0056D2] border-gray-300 rounded cursor-pointer transition duration-150 ease-in-out" />
                                        </div>
                                        <div class="ml-3 text-sm w-full">
                                            <label class="font-medium text-gray-900 @(activity.IsCompleted ? "line-through text-gray-400" : "") block cursor-pointer">
                                                @activity.Title
                                            </label>
                                            <p class="text-gray-500 mt-1 @(activity.IsCompleted ? "line-through text-gray-300" : "")">
                                                @activity.Description
                                            </p>
                                            
                                            @if (!string.IsNullOrEmpty(activity.Link))
                                            {
                                                <div class="mt-2">
                                                    <a href="@activity.Link" target="_blank" class="inline-flex items-center text-xs font-bold text-[#0056D2] hover:text-[#00419E] hover:underline bg-blue-50 px-2 py-1 rounded transition">
                                                        <svg class="mr-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                                        Acessar Conte√∫do
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

@code {
    private bool loading = true;
    private List<TrackDto> tracks = new();

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsLoggedIn) { Nav.NavigateTo("/login"); return; }
        await LoadTracks();
    }

    private async Task LoadTracks()
    {
        try
        {
            var request = new HttpRequestMessage(HttpMethod.Get, "api/studytrack");
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);
            if (response.IsSuccessStatusCode)
            {
                tracks = await response.Content.ReadFromJsonAsync<List<TrackDto>>() ?? new();
            }
        }
        catch (Exception)
        {
            Snackbar.Add("Erro ao carregar trilhas.", Severity.Error);
        }
        finally { loading = false; }
    }

    private void ToggleExpand(TrackDto track)
    {
        track.IsExpanded = !track.IsExpanded;
    }

    private double GetProgress(TrackDto t) =>
    t.TotalActivities > 0 ? ((double)t.CompletedActivities / t.TotalActivities) * 100 : 0;

    private async Task DeleteTrack(TrackDto track)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Tens a certeza que queres apagar a trilha '{track.Title}'?");

        if (!confirmed) return;

        try
        {
            var request = new HttpRequestMessage(HttpMethod.Delete, $"api/studytrack/{track.Id}");
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                tracks.Remove(track); // Remove da lista local
                Snackbar.Add("Trilha exclu√≠da.", Severity.Success);
            }
            else
            {
                Snackbar.Add("Erro ao excluir.", Severity.Error);
            }
        }
        catch
        {
            Snackbar.Add("Erro de conex√£o.", Severity.Error);
        }
    }

    private async Task ToggleStatus(TrackDto track, ActivityDto activity)
    {
        activity.IsCompleted = !activity.IsCompleted;

        if (activity.IsCompleted) track.CompletedActivities++;
        else track.CompletedActivities--;

        try
        {
            var newStatus = activity.IsCompleted ? 2 : 0;

            var request = new HttpRequestMessage(HttpMethod.Patch, $"api/activity/{activity.Id}/status");
            request.Content = JsonContent.Create(newStatus);
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (!response.IsSuccessStatusCode)
            {
                activity.IsCompleted = !activity.IsCompleted;
                if (activity.IsCompleted) track.CompletedActivities++; else track.CompletedActivities--;
                Snackbar.Add("Erro ao salvar.", Severity.Error);
            }
        }
        catch
        {
            Snackbar.Add("Erro de conex√£o.", Severity.Error);
        }
    }

    public class TrackDto
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Source { get; set; } = string.Empty;
        public int TotalActivities { get; set; }
        public int CompletedActivities { get; set; }
        public List<ActivityDto> Activities { get; set; } = new();
        public List<InstitutionDto> SavedInstitutions { get; set; }
        public bool IsExpanded { get; set; } = false;
    }

    public class InstitutionDto
    {
        public string InstitutionName { get; set; }
        public string CourseName { get; set; }
        public string City { get; set; }
        public string State { get; set; }
    }

    public class ActivityDto
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Link { get; set; } = string.Empty;
        public bool IsCompleted { get; set; }
    }
}