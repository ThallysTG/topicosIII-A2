@page "/progress"
@page "/progress/{StudentId:int}"
@using EduMentorClient.Services
@using System.Net.Http.Headers
@using Blazored.LocalStorage
@inject HttpClient Http
@inject UserState UserState
@inject NavigationManager Nav
@inject ISnackbar Snackbar
@inject ILocalStorageService LocalStorage

<PageTitle>Progresso - EduMentor</PageTitle>

<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    
    <div class="text-center mb-10">
        <h1 class="text-3xl font-extrabold text-[#0056D2] tracking-tight sm:text-4xl">
            @(report?.StudentName != null ? $"Progresso de {report.StudentName}" : "Painel de Progresso")
        </h1>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500">
            Acompanhamento de evolução nas trilhas e mentorias.
        </p>
    </div>

    @if (loading)
    {
        <div class="flex justify-center mt-12">
            <svg class="animate-spin h-10 w-10 text-[#0056D2]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
        </div>
    }
    else if (report == null)
    {
        <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-md max-w-3xl mx-auto shadow-sm">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">Acesso Negado ou Dados não Encontrados</h3>
                    <div class="mt-4">
                        <button @onclick='() => Nav.NavigateTo(UserState.Role == "Mentor" ? "/mentor-dashboard" : "/")' class="text-sm font-medium text-red-800 hover:text-red-900 underline">
                            Voltar ao Painel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        @if (UserState.Role == "Aluno")
        {
            <div class="mb-10">
                @if (string.IsNullOrEmpty(aiAnalysis))
                {
                    <div class="bg-white border border-gray-200 rounded-3xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300">
                        <div class="flex flex-col md:flex-row items-center justify-between gap-8">
                            
                            <div class="flex-1 space-y-3">
                                <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#0056D2]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                    </svg>
                                    Assistente de Desempenho
                                </h2>
                                <p class="text-gray-600 leading-relaxed">
                                    Quer saber como melhorar seus estudos? Nossa IA analisa seu histórico de atividades e sessões de mentoria para criar um plano de evolução personalizado para você.
                                </p>
                            </div>

                            <div class="flex-shrink-0 w-full md:w-auto">
                                <button @onclick="GetAiAnalysis" disabled="@aiLoading"
                                        class="w-full md:w-auto bg-gradient-to-r from-[#0056D2] to-[#00419E] hover:from-[#00419E] hover:to-[#002f7a] text-white font-bold py-4 px-8 rounded-xl shadow-lg flex items-center justify-center gap-3 transition transform hover:-translate-y-1 hover:shadow-xl disabled:opacity-70 disabled:cursor-not-allowed">
                                    @if (aiLoading)
                                    {
                                        <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                        </svg>
                                        <span>Analisando...</span>
                                    }
                                    else
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                                        </svg>
                                        <span>Gerar Análise com IA</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="bg-white border border-blue-200 rounded-xl p-6 shadow-lg animate-[fadeIn_0.5s] relative overflow-hidden">
                        <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-green-500 to-blue-600"></div>

                        <div class="flex flex-col sm:flex-row gap-4">
                            <div class="flex-shrink-0">
                                <div class="p-3 bg-blue-50 rounded-full">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#0056D2]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                                    </svg>
                                </div>
                            </div>
                            <div class="flex-1">
                                <div class="flex justify-between items-start mb-2">
                                    <h3 class="text-lg font-bold text-gray-900">Análise do EduMentor</h3>
                                    
                                    <span class="text-xs font-medium text-gray-400 bg-gray-50 px-2 py-1 rounded border border-gray-100">Gerado por IA</span>
                                </div>

                                <p class="text-gray-700 leading-relaxed whitespace-pre-line mb-4">
                                    @aiAnalysis
                                </p>

                                <div class="flex justify-end pt-2">
                                    <button @onclick="GetAiAnalysis" disabled="@aiLoading"
                                            class="flex items-center gap-2 text-sm font-bold text-[#0056D2] hover:text-[#00419E] hover:underline px-4 py-2 transition disabled:opacity-50">
                                        @if (aiLoading)
                                        {
                                            <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            <span>Atualizando...</span>
                                        }
                                        else
                                        {
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                            </svg>
                                            <span>Atualizar Análise</span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mb-8">
            <div class="px-6 py-5 border-b border-gray-100 bg-gray-50 flex justify-between items-center">
                <h3 class="text-lg leading-6 font-bold text-gray-900">Visão Geral</h3>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-green-100 text-green-800">
                    @report.GlobalCompletionRate.ToString("F0")% Concluído
                </span>
            </div>
            
            <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <h4 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Atividades de Estudo</h4>
                    <p class="text-3xl font-extrabold text-gray-900">
                        @report.CompletedActivities <span class="text-lg text-gray-400 font-medium">/ @report.TotalActivities</span>
                    </p>
                    
                    <div class="w-full bg-gray-200 rounded-full h-4 mt-4 overflow-hidden">
                        <div class="bg-[#0056D2] h-4 rounded-full transition-all duration-1000 ease-out flex items-center justify-end pr-2" 
                             style="width: @report.GlobalCompletionRate.ToString("F0", System.Globalization.CultureInfo.InvariantCulture)%">
                        </div>
                    </div>
                </div>

                <div>
                    <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-2">Sessões de Mentoria</h4>
                    <p class="text-3xl font-extrabold text-gray-900">
                        @report.CompletedMentoringSessions <span class="text-lg text-gray-400 font-medium">/ @report.TotalMentoringSessions</span>
                    </p>
                    
                    @{
                        var mentorRate = report.TotalMentoringSessions > 0 ? (double)report.CompletedMentoringSessions/report.TotalMentoringSessions*100 : 0;
                    }
                    <div class="w-full bg-gray-200 rounded-full h-4 mt-4 overflow-hidden">
                        <div class="bg-purple-600 h-4 rounded-full transition-all duration-1000 ease-out" 
                             style="width: @mentorRate.ToString("F0", System.Globalization.CultureInfo.InvariantCulture)%">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Detalhes por Trilha
        </h3>

        @if (report.Tracks == null || !report.Tracks.Any())
        {
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-md">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            Este aluno ainda não possui trilhas de estudo vinculadas a este contexto.
                        </p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @foreach (var track in report.Tracks)
                {
                    <div class="bg-white rounded-3xl shadow border border-gray-200 hover:shadow-md transition duration-200 p-5">
                        <div class="flex justify-between items-start mb-4">
                            <h4 class="text-lg font-bold text-gray-900 line-clamp-1">@track.Title</h4>
                            <span class="inline-flex mt-1 items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                @track.Status
                            </span>
                        </div>
                        
                        <div class="w-full bg-gray-200 rounded-full h-2.5 mb-2">
                            <div class="@(track.CompletionRate >= 100 ? "bg-green-500" : "bg-blue-500") h-2.5 rounded-full" 
                                 style="width: @track.CompletionRate.ToString("F0", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        </div>
                        <p class="text-sm text-gray-600 text-right">@track.CompletionRate.ToString("F0")%</p>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    [Parameter] public int? StudentId { get; set; }

    private bool loading = true;
    private bool aiLoading = false;
    private StudentProgressDto? report;
    private string aiAnalysis = "";
    private int currentTargetId = 0;

    protected override async Task OnParametersSetAsync()
    {
        await LoadData();
    }

    protected override async Task OnInitializedAsync()
    {
        if (!UserState.IsLoggedIn) { Nav.NavigateTo("/login"); return; }
    }

    private async Task LoadData()
    {
        loading = true;
        report = null;
        
        currentTargetId = (UserState.Role == "Mentor" && StudentId.HasValue) ? StudentId.Value : UserState.UserId;

        try
        {
            aiAnalysis = await LocalStorage.GetItemAsync<string>($"analysis_student_{currentTargetId}") ?? "";

            string url;
            if (UserState.Role == "Mentor" && StudentId.HasValue)
            {
                url = $"api/reports/mentor/student/{StudentId}";
            }
            else
            {
                url = "api/reports/my-progress";
            }

            var request = new HttpRequestMessage(HttpMethod.Get, url);
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                report = await response.Content.ReadFromJsonAsync<StudentProgressDto>();
            }
            else
            {
                if (response.StatusCode == System.Net.HttpStatusCode.Forbidden)
                    Snackbar.Add("Acesso negado.", Severity.Error);
                else
                    Snackbar.Add($"Erro ao carregar: {response.StatusCode}", Severity.Error);
            }
        }
        catch { Snackbar.Add($"Erro de conexão.", Severity.Error); }
        finally { loading = false; }
    }

    private async Task GetAiAnalysis()
    {
        aiLoading = true;
        try
        {
            var request = new HttpRequestMessage(HttpMethod.Get, "api/reports/ai-analysis");
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AiAnalysisResult>();
                aiAnalysis = result?.Feedback ?? "Sem análise.";
                
                await LocalStorage.SetItemAsync($"analysis_student_{currentTargetId}", aiAnalysis);
            }
            else
            {
                Snackbar.Add("Erro ao gerar análise.", Severity.Error);
            }
        }
        catch { Snackbar.Add("Erro de conexão com a IA.", Severity.Error); }
        finally { aiLoading = false; }
    }
    
    public class AiAnalysisResult { public string Feedback { get; set; } = string.Empty; }

    public class StudentProgressDto
    {
        public int StudentId { get; set; }
        public string StudentName { get; set; } = string.Empty;
        public int TotalActivities { get; set; }
        public int CompletedActivities { get; set; }
        public double GlobalCompletionRate { get; set; }
        public int TotalMentoringSessions { get; set; }
        public int CompletedMentoringSessions { get; set; }
        public List<TrackProgressDto> Tracks { get; set; } = new();
    }

    public class TrackProgressDto
    {
        public int TrackId { get; set; }
        public string Title { get; set; } = string.Empty;
        public int TotalActivities { get; set; }
        public int CompletedActivities { get; set; }
        public double CompletionRate { get; set; }
        public string Status { get; set; } = string.Empty;
    }
}