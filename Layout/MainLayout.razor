@inherits LayoutComponentBase
@inject NavigationManager Nav
@using EduMentorClient.Services
@inject UserState UserState

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="min-h-screen bg-[#F5F7FA] font-sans text-[#1F1F1F] flex flex-col">
    @if (UserState.IsLoggedIn)
    {
        <aside class="@(_sidebarOpen ? "w-64 translate-x-0" : "w-0 -translate-x-full") fixed top-0 left-0 z-50 h-screen bg-white shadow-2xl transition-all duration-300 ease-in-out overflow-y-auto overflow-x-hidden border-r border-gray-200">
            <div class="flex flex-col h-full">

                <div class="h-16 flex items-center px-6 border-b border-gray-100 bg-white flex-shrink-0">
                    <div class="flex items-center gap-2 text-[#0056D2]">
                        <i class="fa-solid fa-graduation-cap text-xl"></i>
                        <span class="text-lg font-bold tracking-tight whitespace-nowrap">EduMentor AI</span>
                    </div>
                </div>

                <div class="flex flex-col p-4 space-y-2 w-64 flex-grow">
                    @if (UserState.Role == "Aluno")
                    {
                        <NavLink href="/" Match="NavLinkMatch.All"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                            Nova Trilha
                        </NavLink>
                        <NavLink href="/my-tracks"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
                            Minhas Trilhas
                        </NavLink>
                        <NavLink href="/progress"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                            Progresso
                        </NavLink>
                        <NavLink href="/find-mentors"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                            Mentores
                        </NavLink>
                    }
                    else if (UserState.Role == "Mentor")
                    {
                        <NavLink href="/mentor-dashboard"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">Painel do Mentor</NavLink>
                    }
                    else if (UserState.Role == "Admin")
                    {
                        <NavLink href="/admin/users"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                            Gestão de Usuários
                        </NavLink>
                        <NavLink href="admin/importar-inep"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
                            Importar Dados INEP
                        </NavLink>
                    }

                    @if (UserState.Role != "Admin")
                    {
                        <NavLink href="/sessions"
                                 class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                                 ActiveClass="bg-blue-100 text-[#0056D2]">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            Sessões
                        </NavLink>
                    }
                </div>
            </div>
        </aside>
    }

    <header class="@(UserState.IsLoggedIn && _sidebarOpen ? "ml-64" : "ml-0") bg-[#0056D2] text-white shadow-md z-10 flex-shrink-0 h-16 transition-all duration-300 ease-in-out">
        <div class="flex items-center justify-between px-4 h-full">

            <div class="flex items-center gap-4">
                @if (UserState.IsLoggedIn)
                {
                    <button @onclick="ToggleSidebar" class="p-2 rounded-lg hover:bg-[#00419E] focus:outline-none transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                }

                @if (!UserState.IsLoggedIn || !_sidebarOpen)
                {
                    <div class="flex items-center gap-2 cursor-pointer animate-[fadeIn_0.3s]" @onclick='() => Nav.NavigateTo("/")'>
                        <i class="fa-solid fa-graduation-cap text-xl"></i>
                        <span class="font-bold text-xl tracking-wide hidden sm:block">EduMentor AI</span>
                    </div>
                }
            </div>

            <div class="flex items-center">
                @if (UserState.IsLoggedIn)
                {
                    @if (isUserMenuOpen)
                    {
                        <div class="fixed inset-0 z-20 cursor-default" @onclick="CloseUserMenu"></div>
                    }

                    <div class="relative ml-3">
                        <button @onclick="ToggleUserMenu"
                                class="flex items-center max-w-xs bg-white rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[#0056D2] focus:ring-white transition">
                            <div class="h-9 w-9 rounded-full flex items-center justify-center bg-white text-[#0056D2] font-bold text-lg border-2 border-transparent hover:border-blue-100">
                                @(string.IsNullOrEmpty(UserState.UserName) ? "?" : UserState.UserName.Substring(0, 1).ToUpper())
                            </div>
                        </button>

                        @if (isUserMenuOpen)
                        {
                            <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-2xl shadow-xl p-2 bg-white ring-1 ring-black ring-opacity-5 z-30 animate-[fadeIn_0.2s]">
                                <div class="px-4 py-3 border-b border-gray-100 mb-1">
                                    <p class="text-sm font-bold text-[#0056D2] truncate">@UserState.UserName</p>
                                    <p class="text-xs text-gray-400 truncate font-medium">@UserState.Role</p>
                                </div>
                                <button @onclick="OpenProfileModal"
                                        class="w-full text-left block px-4 py-2 text-sm rounded-lg text-gray-700 hover:bg-blue-50 hover:text-[#0056D2] transition flex items-center gap-2 font-medium">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                    Meu Perfil
                                </button>
                                <button @onclick="Logout"
                                        class="w-full text-left block px-4 py-2 text-sm rounded-lg text-red-600 hover:bg-red-50 transition flex items-center gap-2 font-medium mt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                    </svg>
                                    Sair
                                </button>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <NavLink href="/login" class="bg-white text-[#0056D2] hover:bg-gray-100 px-5 py-2 rounded-lg text-sm font-bold transition shadow-sm">
                        Entrar
                    </NavLink>
                }
            </div>
        </div>
    </header>

    <main class="@(UserState.IsLoggedIn && _sidebarOpen ? "ml-64" : "ml-0") flex-grow pt-4 transition-all duration-300 bg-[#F5F7FA]">
        <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            @Body
        </div>
    </main>

    <footer class="@(UserState.IsLoggedIn && _sidebarOpen ? "ml-64" : "ml-0") mt-auto py-4 transition-all duration-300">
        <div class="max-w-7xl space-y-2 mx-auto px-4 sm:px-6 lg:px-8 flex flex-col justify-between items-center">
            <div class="text-gray-500 text-sm">&copy; 2025 <b>EduMentor AI</b> - Unitins/TO</div>
            <div class="text-gray-400 text-xs">Powered by Gemini & INEP</div>
        </div>
    </footer>
</div>

<ProfileDialog @bind-IsVisible="isProfileOpen" />

@code {
    [Inject] Blazored.LocalStorage.ILocalStorageService LocalStorage { get; set; }
    private bool _sidebarOpen = true;
    private bool isUserMenuOpen = false;
    private bool isProfileOpen = false;

    protected override void OnInitialized()
    {
        UserState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        UserState.OnChange -= StateHasChanged;
    }

    private void OpenProfileModal()
    {
        isProfileOpen = true;
        isUserMenuOpen = false;
    }

    private void ToggleSidebar()
    {
        _sidebarOpen = !_sidebarOpen;
    }

    private void ToggleUserMenu()
    {
        isUserMenuOpen = !isUserMenuOpen;
    }

    private void CloseUserMenu()
    {
        isUserMenuOpen = false;
    }

    private async Task Logout()
    {
        UserState.Token = string.Empty;
        UserState.UserId = 0;
        UserState.Role = string.Empty;
        UserState.UserName = string.Empty;

        await LocalStorage.ClearAsync();
        UserState.NotifyStateChanged();
        Nav.NavigateTo("/login");
    }
}