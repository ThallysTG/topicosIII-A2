@inherits LayoutComponentBase
@inject NavigationManager Nav
@using EduMentorClient.Services
@inject UserState UserState

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="min-h-screen bg-[#F5F7FA] font-sans text-[#1F1F1F] flex flex-col">
    @if (UserState.IsLoggedIn)
    {
        <aside
            class="@(_sidebarOpen ? "w-64 translate-x-0" : "w-0 -translate-x-full") fixed top-0 left-0 z-50 h-screen bg-white shadow-xl transition-all duration-300 overflow-y-auto overflow-x-hidden border-r border-gray-200">
            <div class="flex flex-col h-full">

                <div class="h-16 flex items-center justify-center border-b border-gray-100 bg-gray-50">
                    <span class="text-gray-400 text-xs font-bold uppercase tracking-widest">Menu</span>
                </div>

                <div class="flex flex-col p-4 space-y-2 w-64">
                    @if (UserState.Role == "Aluno")
                    {
                        <NavLink href="/" Match="NavLinkMatch.All"
                            class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Nova Trilha</NavLink>
                        <NavLink href="/my-tracks"
                            class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Minhas Trilhas</NavLink>
                        <NavLink href="/progress"
                            class="lex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Progresso</NavLink>
                        <NavLink href="/find-mentors"
                            class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Mentores</NavLink>
                    }
                    else if (UserState.Role == "Mentor")
                    {
                        <NavLink href="/mentor-dashboard"
                            class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Painel do Mentor</NavLink>
                    }
                    else if (UserState.Role == "Admin")
                    {
                        <NavLink href="/admin/users"
                            class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Gestão de Usuários</NavLink>
                        <NavLink href="admin/importar-inep"
                            class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Importados Dados do INEP</NavLink>
                    }

                    @if (UserState.Role != "Admin")
                    {
                        <NavLink href="/sessions"
                            class="flex items-center px-4 py-3 rounded-xl text-sm font-medium hover:bg-blue-50 hover:text-[#0056D2] transition duration-200 text-gray-700"
                            ActiveClass="bg-blue-100 text-[#0056D2]">Sessões</NavLink>
                    }
                </div>
            </div>
        </aside>
    }

    <header class="bg-[#0056D2] text-white shadow-md z-10 flex-shrink-0 h-16">
        <div class="flex items-center justify-between px-4 h-full">

            <div class="flex items-center gap-4">
                @if (UserState.IsLoggedIn)
                {
                    <button @onclick="ToggleSidebar" class="p-1 rounded hover:bg-[#00419E] focus:outline-none transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                }

                <div class="flex items-center gap-2 cursor-pointer" @onclick='() => Nav.NavigateTo("/")'>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="w-8 h-8 text-white">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813888a1.935 1.935 0 00-1.935-1.935m15.482 0V5.073v2.053M3 13.5V6.75h1.875a1.875 1.875 0 113.75 0H21M12 3v18" />
                    </svg>
                    <span class="font-bold text-xl tracking-wide hidden sm:block">EduMentor AI</span>
                </div>
            </div>

            <div class="flex items-center">
                @if (UserState.IsLoggedIn)
                {
                    @if (isUserMenuOpen)
                    {
                        <div class="fixed inset-0 z-20 cursor-default" @onclick="CloseUserMenu"></div>
                    }

                <div class="relative ml-3">
                    <button @onclick="ToggleUserMenu"
                        class="flex items-center max-w-xs bg-white rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[#0056D2] focus:ring-white transition">
                        <div
                            class="h-9 w-9 rounded-full flex items-center justify-center bg-white text-[#0056D2] font-bold text-lg border-2 border-transparent hover:border-blue-100">
                            @(string.IsNullOrEmpty(UserState.UserName) ? "?" :
                                                        UserState.UserName.Substring(0, 1).ToUpper())
                            </div>
                        </button>

                        @if (isUserMenuOpen)
                            {
                                <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-2xl shadow-xl p-2 bg-white ring-1 ring-black ring-opacity-5 z-30 animate-[fadeIn_0.2s]">

                                    <div class="px-4 py-3 border-b border-gray-100 mb-1">
                                        <p class="text-sm font-bold text-[#0056D2] truncate">@UserState.UserName</p>
                                        <p class="text-xs text-gray-400 truncate font-medium">@UserState.Role</p>
                                    </div>

                                    <button @onclick="OpenProfileModal"
                                            class="w-full text-left block px-4 py-2 text-sm rounded-lg text-gray-700 hover:bg-blue-50 hover:text-[#0056D2] transition flex items-center gap-2 font-medium">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                        Meu Perfil
                                    </button>
                                    
                                    <button @onclick="Logout"
                                            class="w-full text-left block px-4 py-2 text-sm rounded-lg text-red-600 hover:bg-red-50 transition flex items-center gap-2 font-medium mt-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                        </svg>
                                        Sair
                                    </button>
                                </div>
                            }
                    </div>
                }
                else
                {
                    <NavLink href="/login"
                        class="bg-white text-[#0056D2] hover:bg-gray-100 px-5 py-2 rounded-lg text-sm font-bold transition shadow-sm">
                        Entrar
                    </NavLink>
                }
            </div>
        </div>
    </header>

    <main
        class="@(UserState.IsLoggedIn && _sidebarOpen ? "ml-64" : "ml-0") flex-grow pt-16 transition-all duration-300 bg-[#F5F7FA]">
        <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            @Body
        </div>
    </main>

    <footer class="@(UserState.IsLoggedIn && _sidebarOpen ? "ml-64" : "ml-0") mt-auto py-4 transition-all duration-300">
        <div class="max-w-7xl space-y-2 mx-auto px-4 sm:px-6 lg:px-8 flex flex-col justify-between items-center">
            <div class="text-gray-500 text-sm">&copy; 2025 <b>EduMentor AI</b> - Unitins/TO</div>
            <div class="text-gray-400 text-xs">Powered by Gemini & INEP</div>
        </div>
    </footer>
</div>

<ProfileDialog @bind-IsVisible="isProfileOpen" />

@code {
    [Inject] Blazored.LocalStorage.ILocalStorageService LocalStorage { get; set; }
    private bool _sidebarOpen = true;
    private bool isUserMenuOpen = false;
    private bool isProfileOpen = false;

    protected override void OnInitialized()
    {
        UserState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        UserState.OnChange -= StateHasChanged;
    }

    private void OpenProfileModal()
    {
        isProfileOpen = true;
    }

    private void ToggleSidebar()
    {
        _sidebarOpen = !_sidebarOpen;
    }

    private void ToggleUserMenu()
    {
        isUserMenuOpen = !isUserMenuOpen;
    }

    private void CloseUserMenu()
    {
        isUserMenuOpen = false;
    }

    private async Task Logout()
    {
        UserState.Token = string.Empty;
        UserState.UserId = 0;
        UserState.Role = string.Empty;
        UserState.UserName = string.Empty;

        await LocalStorage.ClearAsync();

        UserState.NotifyStateChanged();

        Nav.NavigateTo("/login");
    }
}