@inherits LayoutComponentBase
@inject NavigationManager Nav
@using EduMentorClient.Services
@inject UserState UserState

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudText Typo="Typo.h5" Class="ml-3" Style="cursor: pointer" @onclick='() => Nav.NavigateTo("/")'>EduMentor AI
        </MudText>
        <MudSpacer />

        @if (UserState.IsLoggedIn)
        {
            <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/" StartIcon="@Icons.Material.Filled.Add">Nova
            </MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/my-tracks"
                StartIcon="@Icons.Material.Filled.List">Minhas Trilhas</MudButton>

            <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/progress"
                StartIcon="@Icons.Material.Filled.BarChart">Progresso</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit" OnClick="Logout"
                StartIcon="@Icons.Material.Filled.Logout">Sair</MudButton>
        }
        else
        {
            <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/login">Login</MudButton>
        }
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    [Inject] Blazored.LocalStorage.ILocalStorageService LocalStorage { get; set; }

    private async Task Logout()
    {
        UserState.Token = string.Empty;
        UserState.UserId = 0;
        await LocalStorage.RemoveItemAsync("authToken");
        await LocalStorage.RemoveItemAsync("userId");
        Nav.NavigateTo("/login");
    }
}