@page "/"
@using EduMentorClient.Services
@using System.Net.Http.Headers 
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject UserState UserState
@inject NavigationManager Nav

<PageTitle>EduMentor - Nova Trilha</PageTitle>

<div class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 transition-all duration-500 @(result == null ? "min-h-[80vh] flex flex-col justify-center" : "py-8")">

    <div class="text-center mb-10 transition-all duration-500">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-[#0056D2] tracking-tight mb-4">
            O que queres aprender hoje?
        </h1>
        <p class="max-w-2xl mx-auto text-xl text-gray-500">
            A IA cria o teu plano de estudos e o INEP diz onde estudar.
        </p>
    </div>

    <div class="w-full max-w-3xl mx-auto p-2 sm:p-8 border border-gray-100 transition-all duration-300">
        <div class="relative">
            <label for="objective" class="sr-only">O teu objetivo</label>
            <div class="relative rounded-xl shadow-sm">
                <textarea id="objective" 
                          rows="@(result == null ? "3" : "2")"
                          @bind="userGoal"
                          class="block w-full text-lg border-gray-300 rounded-xl p-4 focus:ring-2 focus:ring-[#0056D2] focus:border-[#0056D2] outline-none transition resize-none bg-white focus:bg-white"
                          placeholder="Ex: Quero ser programador C# e estudar em Palmas..."></textarea>
                
                <div class="absolute top-4 right-4 text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                    </svg>
                </div>
            </div>
        </div>

        <div class="mt-6 flex justify-center">
            <button @onclick="GenerateTrack" 
                    disabled="@loading"
                    class="w-full sm:w-auto flex items-center justify-center py-3 px-10 border border-transparent rounded-full shadow-md text-base font-bold text-white bg-[#0056D2] hover:bg-[#00419E] focus:outline-none focus:ring-4 focus:ring-blue-200 disabled:opacity-70 disabled:cursor-not-allowed transition transform hover:-translate-y-0.5">
                @if (loading)
                {
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Gerando...</span>
                }
                else
                {
                    <span class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                        </svg>
                        Gerar Trilha de Estudos
                    </span>
                }
            </button>
        </div>
    </div>

    @if (result != null)
    {
        <div class="mt-16 grid grid-cols-1 lg:grid-cols-12 gap-8 animate-[fadeIn_0.5s_ease-out]">
            
            <div class="lg:col-span-7 space-y-6">
                <div class="bg-white overflow-hidden shadow-lg rounded-2xl border border-gray-100">
                    <div class="px-6 py-5 border-b border-gray-100 bg-[#F0F5FF] flex justify-between items-center flex-wrap gap-2">
                        <h3 class="text-xl font-bold text-[#0056D2] flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                            </svg>
                            @result.AiPlan.PlanTitle
                        </h3>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-white text-[#0056D2] border border-blue-200 shadow-sm">
                            🎯 @result.AiPlan.SuggestedCourse
                        </span>
                    </div>
                    
                    <div class="px-6 py-6">
                        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-8 rounded-r-lg">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-yellow-800 italic font-medium">
                                        "@result.AiPlan.Motivation"
                                    </p>
                                </div>
                            </div>
                        </div>

                        <h4 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">A tua Trilha Personalizada</h4>

                        <ul class="space-y-3">
                            @foreach (var activity in result.AiPlan.Activities)
                            {
                                <li class="relative bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md hover:border-blue-200 transition duration-200 group">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0 mt-1">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0056D2]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                        </div>
                                        <div class="ml-4 flex-1">
                                            <h4 class="font-bold text-gray-900 block">
                                                @activity.Title
                                            </h4>
                                            <p class="text-gray-600 text-sm mt-1">
                                                @activity.Description
                                            </p>
                                            
                                            @if (!string.IsNullOrEmpty(activity.Link))
                                            {
                                                <div class="mt-2">
                                                    <a href="@activity.Link" target="_blank" class="inline-flex items-center text-xs font-bold text-[#0056D2] hover:text-[#00419E] hover:underline bg-blue-50 px-2 py-1 rounded">
                                                        <svg class="mr-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                                        Acessar Conteúdo
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-5">
                <div class="bg-white shadow-lg rounded-2xl overflow-hidden border border-gray-100 h-full flex flex-col">
                    <div class="px-6 py-5 border-b border-gray-100 bg-[#E6FFFA] flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-bold text-[#007F6D]">
                                Onde Estudar?
                            </h3>
                            <p class="text-xs text-[#2C7A7B]">Dados oficiais do INEP 2024</p>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#38B2AC]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                    
                    <div class="flex-grow overflow-y-auto max-h-[700px] scrollbar-thin scrollbar-thumb-gray-200">
                        @if (result.InepOptions == null || !result.InepOptions.Any())
                        {
                            <div class="p-8 text-center text-gray-500 flex flex-col items-center justify-center h-full">
                                <svg class="h-12 w-12 text-gray-300 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <p>Nenhuma faculdade encontrada.</p>
                            </div>
                        }
                        else
                        {
                            <table class="min-w-full divide-y divide-gray-100">
                                <thead class="bg-gray-50 sticky top-0 z-10">
                                    <tr>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Instituição</th>
                                        <th scope="col" class="px-6 py-3 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">Local</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-100">
                                    @foreach (var course in result.InepOptions)
                                    {
                                        <tr class="hover:bg-[#E6FFFA] transition duration-150 cursor-default group">
                                            <td class="px-6 py-4 whitespace-normal">
                                                <div class="text-sm font-bold text-gray-800 group-hover:text-[#007F6D]">@course.InstitutionName</div>
                                                <div class="text-xs text-gray-500 mt-0.5">@course.CourseName</div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                                <span class="px-2.5 py-0.5 inline-flex text-xs font-bold rounded-full bg-green-50 text-green-700 border border-green-100">
                                                    @course.City - @course.State
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string userGoal = "";
    private bool loading = false;
    private ApiResponse? result;

    protected override void OnInitialized()
    {
        if (!UserState.IsLoggedIn)
        {
            Nav.NavigateTo("/login");
        }
    }

    public class ApiResponse
    {
        public AiPlan AiPlan { get; set; }
        public List<InepCourse> InepOptions { get; set; }
    }

    public class AiPlan
    {
        public string PlanTitle { get; set; }
        public string Motivation { get; set; }
        public string SuggestedCourse { get; set; }
        public List<Activity> Activities { get; set; }
    }

    public class Activity
    {
        public int Id { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
        public string Link { get; set; }
        public bool IsCompleted { get; set; }
    }

    public class InepCourse
    {
        public string InstitutionName { get; set; }
        public string CourseName { get; set; }
        public string City { get; set; }
        public string State { get; set; }
    }

    private async Task GenerateTrack()
    {
        if (string.IsNullOrWhiteSpace(userGoal))
        {
            Snackbar.Add("Por favor, descreve o teu objetivo!", Severity.Warning);
            return;
        }

        loading = true;
        result = null;

        try
        {
            var payload = new { StudentId = UserState.UserId, SpecificGoal = userGoal };
            
            var request = new HttpRequestMessage(HttpMethod.Post, "api/recommendation/generate");
            request.Content = JsonContent.Create(payload);
            request.Headers.Authorization = new AuthenticationHeaderValue("Bearer", UserState.Token);

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                result = await response.Content.ReadFromJsonAsync<ApiResponse>();
                Snackbar.Add("Trilha gerada com sucesso! Podes encontrá-la em 'Minhas Trilhas'.", Severity.Success);
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                Snackbar.Add("Sessão expirada. Faz login novamente.", Severity.Error);
                Nav.NavigateTo("/login");
            }
            else
            {
                Snackbar.Add($"Erro na API: {response.StatusCode}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro de conexão: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }
}