@using MudBlazor
@using System 

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4">
            Envie uma mensagem curta para <b>@MentorName</b> explicando seu objetivo.
        </MudText>
        <MudTextField T="string" 
                      Label="Sua mensagem" 
                      Variant="Variant.Outlined" 
                      Lines="4" 
                      @bind-Value="Message"
                      Required="true"
                      RequiredError="Escreva uma mensagem para o mentor." />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Enviar Solicitação</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string MentorName { get; set; }

    public string Message { get; set; } = "";

    void Submit()
    {
        if (string.IsNullOrWhiteSpace(Message)) return;
        MudDialog.Close(DialogResult.Ok(Message));
    }

    void Cancel() => MudDialog.Cancel();
}